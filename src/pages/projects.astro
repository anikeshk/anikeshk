---
import PageHeading from "../components/page-heading.astro";
import ProjectsLoop from "../components/projects-loop.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="My Projects">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="My Projects"
      description="Here are some of my current projects. I love bringing new ideas to life and am always working on something fresh, so be sure to check back!"
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2"
    >
      <ProjectsLoop count="999999999" />
    </div>
  </section>
</Layout>
